<section class="book-results">
 <img src="<%= book.image_url %>">
  <h3><%= book.title %><% if (book.subtitle) { %>: <%= book.subtitle %> <% } %></h3>
  <span> <%= book.author %></span>
  <p class="desc"> <%= book.description %> </p>
  <p class="isbn">
    <%= book.isbn %> 
    <% if ( book.bookshelf) { %>
      &mdash;
      Bookshelf:
      <%= book.bookshelf %>
    <% } %>
  </p>
  <form action="<%= `/books/${book.id}` %>" method="POST">
   <input type="hidden" name="_method" value="put">
   <span>Update bookshelf</span> <input class="input" type="text" name="bookshelf" value = "<%= book.bookshelf %>"/>
  <button type="submit">Submit</button>
  </form>
</section>
