<section class="book-results">
    <img src="<%= book.image_url %>">
    <h3> <%= book.title %><% if (book.subtitle) { %>: <%= book.subtitle %> <% } %> </h3>
    <span> <%= book.author %></span>
    <% if ( book.bookshelf) { %>
        &mdash;
        Bookshelf:
        <%= book.bookshelf %>
      <% } %>
      <!-- <p class="detail-button"><a class="detail-button" href="../books/<%= book.id %>">View Details</a></p> -->
      <button><a class="button_link" href="../books/<%= book.id %>">View Details</a></button>
</section>
