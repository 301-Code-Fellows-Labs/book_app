<!DOCTYPE html>
<html lang="en">    

<head>
    <%- include('../layout/head') %>
  </head>
  
  <body>
    <header>
      <%- include('../layout/header') %>
    </header>
  
        <main>
            <h4>Saved Books</h4>
            <p><%= books.length %> books in the Collection</p>
            <% books.forEach(book => { %>  
              <div class="book-results" data-book-id="<%= book.id %>">
                  <%- include('books/detail', {book: book}) %>
                  <p class="detail-button"><a href="../books/<%= book.id %>">View Details</a></p>
              </div>
              <% }) %>
        </main>
      </body>
</html>