<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../../layout/head') %>
      </head>
      
      <body>
        <header>
          <%- include('../../layout/header') %>
        </header>
<main>
  <% searchResults.forEach(item => { %>
    <div class="book-results">
      <img src="<%= item.image %>"/>

      <h2><%= item.title %></h2>

      <p><%= item.author %></p>
    
      <p><%= item.description %></p>
      <p class="detail-button"><a href="../books/<%= item.id %>">View Details</a></p>
    </div>
      <% }) %>
</main>
</body>

</html>